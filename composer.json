{
  "name": "jenssegers/mongodb-core",
  "description": "A MongoDB based Query builder for Laravel",
  "keywords": ["laravel","mongodb","mongo","database","model","moloquent"],
  "homepage": "https://github.com/jenssegers/laravel-mongodb-core",
  "authors": [
    {
      "name": "Jens Segers",
      "homepage": "https://jenssegers.com"
    }
  ],
  "license" : "MIT",
  "require": {
    "ext-mongodb": "*",
    "illuminate/database": "^5.6",
    "mongodb/mongodb": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0|^7.0",
    "orchestra/testbench": "^3.7",
    "php-coveralls/php-coveralls": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Jenssegers\\Mongodb\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jenssegers\\Mongodb\\Tests\\": "tests/"
    }
  },
  "suggest": {
    "jenssegers/mongodb": "Add Eloquent support to laravel-mongodb",
    "jenssegers/mongodb-session": "Add MongoDB session support to laravel-mongodb",
    "jenssegers/mongodb-sentry": "Add Sentry support to laravel-mongodb"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Jenssegers\\Mongodb\\MongodbServiceProvider"
      ]
    }
  },
  "scripts": {
    "run-test": "phpunit --coverage-clover ./clover.xml" 
  }
}
